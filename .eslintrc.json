{
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "env": {
        "es2021": true,
        "node": true
    },
    "rules": {
        "no-var": "error",
        "no-const-assign": "error",
        "no-func-assign": "error",
        "no-undef": "error",
        "eqeqeq": [
            "warn",
            "always",
            {
                "null": "ignore"
            }
        ],
        "no-lone-blocks": "error",
        "no-useless-catch": "error",
        "no-dupe-args": "error",
        "no-eval": "error",
        "valid-typeof": "error",
        "camelcase": [
            "error",
            {
                "properties": "never"
            }
        ]
    }
}